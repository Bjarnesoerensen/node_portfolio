doctype html
html
  head
    title= `${title || 'Home'} | ${helpers.siteName}`
    link(rel='stylesheet', href='/dist/style.css')
    meta(name="description", content=`${description  || 'Just a tiny little website'}`)
    meta(name="viewport", content="width=device-width, initial-scale=1")
  
  body
      block header                 
        .container-fluid
            nav.navbar.navbar-expand-lg.navbar-light.bg-white.fixed-top
                a.navbar-brand(href='#') BRS
                                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                                  span.navbar-toggler-icon
                                      #navbarNav.collapse.navbar-collapse.ml-auto
                ul.navbar-nav
                  li.nav-item
                    a.nav-link(href='/') Home       
                  li.nav-item
                    a.nav-link(href='about') About
                  li.nav-item
                    a.nav-link(href='projects') Projects
                  li.nav-item
                    a.nav-link(href='contact') Contact
                ul.navbar-nav.ml-auto
                  li
                  a.fa.fa-codepen.fa-2x(href='https://codepen.io/Bjarnesoerensen/')
                  a.fa.fa-github.fa-2x(href='http://www.github.com')
                  a.fa.fa-twitter.fa-2x(href='http://www.twitter.com')
                  a.fa.fa-slack.fa-2x(href='http://www.slack.com')
      block content
        
      block footer
        .container
          p.text-muted © 2018 Bjarne Sörensen, All rights reserved.

      block scripts
        script(src="/dist/app.bundle.js")